cmake_minimum_required(VERSION 2.8.3)
project(object_detection)

find_package(catkin REQUIRED COMPONENTS
  pcl_conversions
  pcl_ros
  roscpp
  rospy
  std_msgs
  sensor_msgs
)

catkin_package(
  INCLUDE_DIRS 
  	include
  LIBRARIES 
  	object_detection
  CATKIN_DEPENDS 
  	pcl_conversions 
  	pcl_ros roscpp 
  	rospy sensor_msgs 
  	std_msgs 
  	#message_runtime
  DEPENDS system_lib
)


include_directories(
  include
  ${catkin_INCLUDE_DIRS}
)


add_executable(object_detection_node src/object_detection_node.cpp src/ObjectDetection.cpp src/filtering.cpp)
target_link_libraries(object_detection_node ${catkin_LIBRARIES})
add_dependencies(object_detection_node object_detection_gencpp)
